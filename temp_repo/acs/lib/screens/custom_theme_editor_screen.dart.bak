                      dropdownColor: context.colors.surface,
                      style: TextStyle(color: context.colors.onBackground),
                      items: availableThemes.map((theme) {
                        return DropdownMenuItem<AppThemeType>(
                          value: theme,
                          child: SizedBox(
                            width: 200, // Ограничиваем ширину элемента в списке
                            child: Text(_getThemeDisplayName(theme, l10n)),
                          ),
                        );
                      }).toList(),
                      onChanged: (AppThemeType? newTheme) {
                        if (newTheme != null) {
                          final themeProvider = Provider.of<ThemeProviderV2>(
                            context,
                            listen: false,
