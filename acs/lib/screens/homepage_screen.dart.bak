import 'package:flutter/material.dart';
import 'package:acs/theme/app_theme.dart';
import 'package:go_router/go_router.dart';
import 'package:provider/provider.dart';
import '../widgets/premium_bottom_navigation.dart';
import '../widgets/rating_request_dialog.dart';
import '../l10n/app_localizations.dart';
import '../providers/user_state.dart';
import '../services/chat_context_service.dart';
import '../services/rating_service.dart';
import '../widgets/custom_app_bar.dart';

class HomepageScreen extends StatefulWidget {
  const HomepageScreen({super.key});

  @override
  State<HomepageScreen> createState() => _HomepageScreenState();
}

class _HomepageScreenState extends State<HomepageScreen> {
  @override
  void initState() {
    super.initState();
    WidgetsBinding.instance.addPostFrameCallback((_) {
      _checkAndShowRatingDialog();
    });
  }

  Future<void> _checkAndShowRatingDialog() async {
    final ratingService = context.read<RatingService>();
    final shouldShow = await ratingService.shouldShowRatingDialog();
    if (shouldShow && mounted) {
      showDialog(
        context: context,
        builder: (BuildContext context) {
          return const RatingRequestDialog();
        },
      ).then((_) {
        // Reset scan count after dialog is shown, regardless of outcome
        ratingService.resetScanCount();
      });
    }
  }

  @override
  Widget build(BuildContext context) {
    final l10n = AppLocalizations.of(context)!;
    final userState = context.watch<UserState>();

    return PremiumBottomNavigation(
      currentIndex: 0,
      child: Scaffold(
        backgroundColor: AppTheme.beige, // Changed to theme color
        appBar: CustomAppBar(
          title: Text(
            l10n.skinAnalysis, // Using localized title
            style: TextStyle(
              color: Colors.white,
              fontFamily: AppTheme.fontFamilySerif,
              fontWeight: FontWeight.bold,
            ),
          ),
        ),
        body: SafeArea(
          child: SingleChildScrollView(
            child: Padding(
              padding: const EdgeInsets.fromLTRB(16.0, 0, 16.0, 16.0),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  const SizedBox(height: AppTheme.space24), // Use theme spacing
                  // Welcome text (removed 'Skin Analysis' as it's in AppBar)
                  // const SizedBox(height: AppTheme.space8), // Removed if not needed after text removal

                  // Main scan button
                  Container(
                    width: double.infinity,
                    height: 200,
                    decoration: BoxDecoration(
                      gradient: AppTheme.primaryGradient,
                      borderRadius: BorderRadius.circular(AppTheme.radiusLarge),
                      boxShadow: [AppTheme.coloredShadow],
                    ),
                    child: ElevatedButton(
                      onPressed: () => context.go('/scanning'),
                      style: ElevatedButton.styleFrom(
                        backgroundColor: Colors.transparent,
                        shadowColor: Colors.transparent,
                        shape: RoundedRectangleBorder(
                          borderRadius: BorderRadius.circular(
                            AppTheme.radiusLarge,
                          ),
                        ),
                      ),
                      child: Column(
                        mainAxisAlignment: MainAxisAlignment.center,
                        children: [
                          const Icon(
                            Icons.camera_alt,
                            size: 64,
                            color: Colors.white,
                          ),
                          const SizedBox(height: 16),
                          Text(
                            l10n.startScanning,
                            style: const TextStyle(
                              fontSize: 20,
                              fontWeight: FontWeight.bold,
                              color: Colors.white,
                            ),
                          ),
                          const SizedBox(height: 16),
                          Text(
                            l10n.checkYourCosmetics,
                            style: AppTheme.body.copyWith(
                              color: Colors.white,
                              fontSize: 14,
                            ),
                          ),
                        ],
                      ),
                    ),
                  ),
                  const SizedBox(height: 30),

                  // Quick actions
                  Text(l10n.quickActions, style: AppTheme.h3),
                  const SizedBox(height: 16),

                  Row(
                    children: [
                      Expanded(
                        child: _buildQuickAction(
                          context,
                          l10n.scanHistory,
                          Icons.history,
                          () => context.go('/history'),
                        ),
                      ),
                      const SizedBox(width: 16),
                      Expanded(
                        child: _buildQuickAction(
                          context,
                          l10n.aiChat,
                          Icons.chat_bubble_outline,
                          () {
                            // Генерируем контекст профиля пользователя
                            final userState = Provider.of<UserState>(
                              context,
                              listen: false,
                            );
                            final profileContext =
                                ChatContextService.generateUserProfileContext(
                                  userState,
                                );

                            // Переходим в чат с контекстом профиля
                            context.push(
                              '/chat',
                              extra: {
                                'scanContext': profileContext.isNotEmpty
                                    ? profileContext
                                    : null,
                              },
                            );
                          },
                        ),
                      ),
                      const SizedBox(width: 16),
                      Expanded(
                        child: _buildQuickAction(
                          context,
                          l10n.profile,
                          Icons.person_outline,
                          () => context.go('/profile'),
                        ),
                      ),
                    ],
                  ),
                  const SizedBox(height: 30),

                  // Settings section
                  Text(l10n.settings, style: AppTheme.h3),
                  const SizedBox(height: 16),

                  // Показываем настройки только если они не установлены
                  if (userState.ageRange == null)
                    _buildSettingItem(
                      context,
                      l10n.age,
                      Icons.cake_outlined,
                      () => context.push('/age'),
                    ),
                  if (userState.skinType == null)
                    _buildSettingItem(
                      context,
                      l10n.skinType,
                      Icons.face,
                      () => context.push('/skintype'),
                    ),
                  if (userState.allergies.isEmpty)
                    _buildSettingItem(
                      context,
                      l10n.allergiesSensitivities,
                      Icons.warning_amber_outlined,
                      () => context.push('/allergies'),
                    ),
                  // Подписка всегда отображается
                  _buildSettingItem(
                    context,
                    l10n.subscription,
                    Icons.card_membership_outlined,
                    () => context.go('/subscription'),
                  ),

                  const SizedBox(height: 20),
                ],
              ),
            ),
          ),
        ),
      ),
    );
  }
}

Widget _buildQuickAction(
  BuildContext context,
  String label,
  IconData icon,
  VoidCallback onTap,
) {
  return GestureDetector(
    onTap: onTap,
    child: Container(
      height: 100,
      decoration: BoxDecoration(
        color: AppTheme.cardBackground,
        borderRadius: BorderRadius.circular(AppTheme.radiusStandard),
        border: Border.all(
          color: AppTheme.naturalGreen.withValues(alpha: 0.3),
          width: 1,
        ),
      ),
      child: Padding(
        padding: const EdgeInsets.symmetric(horizontal: 12.0, vertical: 8.0),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Icon(icon, size: 32, color: AppTheme.naturalGreen),
            const SizedBox(height: 8),
            Text(
              label,
              textAlign: TextAlign.center,
              maxLines: 2,
              overflow: TextOverflow.ellipsis,
              style: AppTheme.bodySmall.copyWith(
                fontWeight: FontWeight.w600,
                color: AppTheme.deepBrown,
              ),
            ),
          ],
        ),
      ),
    ),
  );
}

Widget _buildSettingItem(
  BuildContext context,
  String title,
  IconData icon,
  VoidCallback onTap,
) {
  return GestureDetector(
    onTap: onTap,
    child: Container(
      margin: const EdgeInsets.only(bottom: 12),
      padding: const EdgeInsets.all(16),
      decoration: BoxDecoration(
        color: AppTheme.cardBackground,
        borderRadius: BorderRadius.circular(AppTheme.radiusCard),
        border: Border.all(
          color: AppTheme.mediumGrey.withValues(alpha: 0.3),
          width: 1,
        ),
      ),
      child: Row(
        children: [
          Icon(icon, color: AppTheme.naturalGreen),
          const SizedBox(width: 16),
          Expanded(
            child: Text(
              title,
              style: AppTheme.bodyLarge.copyWith(fontWeight: FontWeight.w500),
            ),
          ),
          Icon(Icons.arrow_forward_ios, size: 16, color: AppTheme.mediumGrey),
        ],
      ),
    ),
  );
}
