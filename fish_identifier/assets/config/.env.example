# Environment configuration template
# Copy this file to .env and update the values

# Environment (development, staging, production)
ENVIRONMENT=development

# Server configuration for remote prompts update
# Set this URL in production to enable remote updates
SERVER_CONFIG_URL=https://your-server.com/api/prompts

# API endpoints (if needed)
API_BASE_URL=https://api.example.com

# Feature flags
ENABLE_REMOTE_PROMPTS=false
ENABLE_DEBUG_MODE=true

# Cache settings
PROMPTS_CACHE_DURATION_HOURS=24

# Other settings
APP_VERSION=1.0.0

# Rating dialog settings
MAX_RATING_DIALOG_SHOWS=3
GOOGLE_PLAY_PACKAGE_ID=com.fishidentifier.fish_identifier

# Security: Never commit real API keys to version control
# Use Supabase Edge Functions for secure API calls
